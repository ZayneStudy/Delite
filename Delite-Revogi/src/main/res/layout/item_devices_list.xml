<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/item_devices"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrayBlack">

    <CheckBox
        android:id="@+id/item_devices_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_device_check"
        android:button="@null"/>

    <ImageView
        android:id="@+id/item_devices_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/item_devices_check"
        android:contentDescription="@null"
        android:src="@drawable/ic_transparent_bulb"/>

    <CheckBox
        android:id="@+id/item_devices_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_switch"
        android:button="@null"/>

    <TextView
        android:id="@+id/item_devices_name"
        style="@style/FirstBodyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/item_devices_device"
        android:layout_toStartOf="@id/item_devices_switch"
        android:textColor="@color/colorWhite"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignBottom="@id/item_devices_switch"
        android:background="@color/colorLine"/>
</RelativeLayout>